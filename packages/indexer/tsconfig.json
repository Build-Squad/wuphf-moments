{
  "extends": "ts-node/node16/tsconfig.json",
  "include": [
    "modules.d.ts",
    "src/**/*.ts"
  ],
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "target": "es2017",
    "resolveJsonModule": true
  }
}